<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" /> <!-- Add padding -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- Border color (e.g., purple) -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" /> <!-- Add padding -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#03DAC5" /> <!-- Border color (e.g., teal) -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" /> <!-- Add padding -->
        </shape>
    </item>
</selector>