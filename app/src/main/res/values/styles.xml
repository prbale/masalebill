<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--  <item name="colorPrimary">@color/colorPrimary</item>
          <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
          <item name="colorAccent">@color/colorAccent</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyHoloTimePicker" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:colorAccent">@color/teal_200</item>
        <item name="android:headerBackground">@color/teal_200</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:calendarTextColor">@android:color/black</item>
        <item name="android:dayOfWeekTextAppearance">@android:color/black</item>
        <item name="android:dayOfWeekBackground">@android:color/black</item>
        <item name="android:yearListSelectorColor">@android:color/black</item>
        <item name="android:yearListItemTextAppearance">@android:color/black</item>
        <item name="android:headerDayOfMonthTextAppearance">@android:color/black</item>
        <item name="android:colorControlActivated">@color/teal_200</item>
        <item name="android:datePickerMode">calendar</item>
    </style>


    <style name="Widget"></style>

    <style name="Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input_style</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dp</item>
        <item name="maxWidth">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="maxHeight">48dp</item>
    </style>

</resources>
